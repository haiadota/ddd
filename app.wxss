/**app.wxss**/
page {
  background-color: #fafafa;
  color: #333;
}
::-webkit-scrollbar
{
  width: 14rpx;
  background-color: transparent;
}
::-webkit-scrollbar-thumb
{
  border-radius: 8rpx;
  background-color: rgba(221, 221, 221, 0.8);
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  font-size: 32rpx;
}

.head{
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: center;
  padding: 0rpx 30rpx;
  margin: 35rpx 0;
  box-sizing: border-box;
  justify-content: space-between;
}

.btn-group{
  display: flex;
  font-size: 24rpx;
  line-height: 50rpx;
}
.btn{
  border-radius: 30rpx;
  padding: 0 20rpx;
  margin-left: 30rpx;
  background: #ddd;
}
.btn-active{
  color: #fff;
  border-radius: 30rpx;
  padding: 0 20rpx;
  margin-left: 30rpx;
  background: #e3a226;
}

.list-wrap{
  width: 100%;
  flex: 1;
  margin-bottom: 30rpx;
}
.list{
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx 0 30rpx;
  width: 100%;
  font-family: Arial, Helvetica, sans-serif;
}
.list-item{
  display: flex;
  align-items: center;
  width: 100%;
  height: 186rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  box-shadow: 0rpx 6rpx 25rpx #eee;
  padding: 0rpx 30rpx;
  background: #fff;
  margin-bottom: 30rpx;
}